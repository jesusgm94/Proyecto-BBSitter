<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".ElegirquePerfilCrear">

    <ImageView
        android:layout_width="106sp"
        android:layout_height="118sp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/logobbsitterverticalblanco" />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Elige perfil"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40sp"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Pincha en el perfil que quieres crear para que los demÃ¡s te conozcan."
        android:textSize="18dp"
        android:textColor="@android:color/white"
        />


    <Button
        android:id="@+id/btnPerfilFamilia"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/botonredondeadoblue"
        android:text="familia"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPerfilCanguro"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/botonredondeadoblue"
        android:text="canguro"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>