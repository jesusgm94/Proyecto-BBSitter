<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.bbsitter.bbsitter.Login"
    android:background="@drawable/fondologin">


    <ImageView
        android:layout_width="106sp"
        android:layout_height="118sp"
        android:layout_marginTop="90sp"
        android:layout_marginBottom="20sp"
        android:src="@drawable/logobbsitterverticalblanco" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60sp"
        android:text="Login"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent2"
        />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:hint="Email"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:paddingLeft="20sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/marcoblancobutton"
        />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:hint="Password"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:paddingLeft="20sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/marcoblancobutton"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:text="¿Olvidaste la contraseña? Pincha aqui"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginRight="45sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnCrearCuenta"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="40sp"
            android:text="Crear cuenta"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/botonredondeadoblue"
            />
        <Button
            android:id="@+id/btnLoginSingIn"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Iniciar"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/botonredondeadopurpledark"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Todavia no tienes cuenta? Pincha aqui"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:background="#3B5998"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:id="@+id/fb"
            android:textAllCaps="false"
            android:text="Facebook"
            android:textSize="22sp"
            android:textColor="#ffffff" />
    <!--<Button
        android:id="@+id/btnLoginFacebook"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/botonredondeadoblue"
        android:text="Facebook"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" /> -->

    <Button
        android:id="@+id/btnLoginGoogle"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:text="Google"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/botonredondeadopurple"
        />

    </LinearLayout>
</LinearLayout>